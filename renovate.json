{
  "extends": ["config:base"],
  "semanticCommits": true,
  "ignoreTests": true,
  "assignAutomerge": true,
  "automergeType": "pr",
  "npm": {
    "stabilityDays": 3
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "addLabels": ["dev-dependency"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "addLabels": ["@types"],
      "automerge": true
    }
  ]
}
